@model IEnumerable<MedicalMarket.Models.App.Item>

@{
    ViewData["Title"] = "Index";
}


<table class="table table-striped" style="direction:rtl;">
    <thead>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.IsOutOfStock)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th class="text-right">
                خيارات اخرى
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOutOfStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">مسح</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<p style="float:right;" class="btn btn-default">
    <a asp-action="Create">اضافة صنف</a>
</p>