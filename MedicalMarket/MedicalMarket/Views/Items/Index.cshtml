@model IEnumerable<MedicalMarket.Models.App.Item>

@{
    ViewData["Title"] = "Index";
}

<p style="float:right; margin:8px;" class="btn btn-default">
    <a asp-action="Create">اضافة منتج</a>
</p>


<table class="table table-striped" style="direction:rtl;">
    <thead>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.IsOutOfStock)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th class="text-right">
                خيارات اخرى
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOutOfStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a id="deletebtn" style="cursor:pointer;" data-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" style="float:left;">&times;</button>
                <h4 class="modal-title">حذف</h4>
            </div>
            <div class="modal-body">
                <h3>هل انت متاكد من حذف هذا المنتج ؟</h3>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" id="del">حذف</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/js/app/deleteItemAsync.js"></script>
}
