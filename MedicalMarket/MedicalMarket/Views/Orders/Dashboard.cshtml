
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="row" style="margin-top:15px;">
    <div class="col-md-12">
        <div class="panel with-nav-tabs">
            <div class="panel-heading">
                <ul class="nav nav-tabs" style="background:none; border-bottom:1px solid none;">
                    <li style="float:right;margin-left:10px;margin-right:0px;" class="active">
                        <a href="#processing" class="fade in active" data-toggle="tab">تحت الطلب</a>
                    </li>
                    <li style="float:right;margin-left:10px;margin-right:0px;">
                        <a href="#done" data-toggle="tab">تم</a>
                    </li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active hover" id="processing">
                        @await Component.InvokeAsync("AdminDashboard", false)
                    </div>
                    <div class="tab-pane fade" id="done">
                        @await Component.InvokeAsync("AdminDashboard", true)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/js/app/adminDashboard.js"></script>
}