@using Microsoft.AspNetCore.Identity
@using MedicalMarket.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager




@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" id="form_signout" asp-action="Logout" method="post" id="logoutForm" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <li>
                <a onclick="document.getElementById('form_signout').submit(); return false;" class="menu-items">تسجيل الخروج</a>
            </li>
        </ul>
    </form>

}
else
{
    <li style="float:left;">
        <a asp-area="" asp-controller="Account" asp-action="Register">حساب جديد</a>
    </li>
    <li style="float:left;">
        <a asp-area="" asp-controller="Account" asp-action="Login">تسجيل الدخول</a>
    </li>
}
