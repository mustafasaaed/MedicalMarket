@using Microsoft.AspNetCore.Identity
@using MedicalMarket.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager




@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Account" id="form_signout" asp-action="Logout" method="post" id="logoutForm" class="navbar-left">
        <ul class="nav navbar-nav navbar-left" style="width:initial;">
            <li>
                <a onclick="document.getElementById('form_signout').submit(); return false;" class="menu-items" style="cursor:pointer;padding:10px 15px;">تسجيل الخروج</a>
            </li>
        </ul>
    </form>
    <li style="float:left;">
        <a asp-controller="ShoppingCart" asp-action="Index" class="menu-items" style="cursor:pointer;padding:10px 15px;">العربه</a>
    </li>
    <li style="float:left;">
        <a asp-controller="Orders" asp-action="MyOrders" class="menu-items" style="cursor:pointer;padding:10px 15px;">مشترياتى</a>
    </li>
}
else
{
    <li style="float:left;">
        <a asp-area="" asp-controller="Account" asp-action="Register">حساب جديد</a>
    </li>
    <li style="float:left;">
        <a asp-area="" asp-controller="Account" asp-action="Login">تسجيل الدخول</a>
    </li>
    <li class="navbar-left">
        <a asp-controller="ShoppingCart" asp-action="Index">العربه</a>
    </li>
}
