@model MedicalMarket.Models.App.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-offset-8 col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.CreateAt" value="@DateTime.UtcNow" />
            <input type="hidden" asp-for="@Model.DeletedAt" value="@DateTime.UtcNow" />
            <input type="hidden" asp-for="@Model.IsDeleted" value="@false" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
