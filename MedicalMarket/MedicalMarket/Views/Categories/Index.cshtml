@model IEnumerable<MedicalMarket.Models.App.Category>

@{
    ViewData["Title"] = "Index";
}

@Html.AntiForgeryToken()

<table class="table table-striped" style="direction:rtl;">
    <thead>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th class="text-right">
                خيارات اخرى
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a id="deletebtn" data-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
         <div class="modal-content">
             <div class="modal-header">
                 <button class="close" data-dismiss="modal" style="float:left;">&times;</button>
                 <h4 class="modal-title">حذف</h4>
             </div>
             <div class="modal-body">
                 <h3>هل انت متاكد من حذف هذا التصنيف ؟</h3>
                 <p>من الممكن ان يترتب ع حذف هذا التصنيف حذف كل العناصر الموجوده بداخله</p>
             </div>
             <div class="modal-footer">
                 <button class="btn btn-danger" id="del">حذف</button>
             </div>
         </div>
    </div>
</div>


<p class="btn btn-default">
    <a asp-action="Create">اضافة صنف</a>
</p>

@section Scripts{
     <script src="~/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/js/app/deleteCategoryAsync.js"></script>
}
