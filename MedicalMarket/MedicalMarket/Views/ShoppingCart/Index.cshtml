@model MedicalMarket.ViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}


<h3>
    راجع العربه
</h3>
<div id="update-message">
</div>
<table class="table table-striped" dir="rtl" id="itemsTable">
    <tr>
        <th class="text-right">
            اسم العنصر
        </th>
        <th class="text-right">
            السعر (لكل)
        </th>
        <th class="text-right">
            الكميه
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
       
        <tr id="row-@item.RecordId">
            <td>
                <a asp-controller="Items" asp-action="Details" asp-route-id="@item.ItemId">@item.Item.Name</a>
            </td>
            <td>
                @item.Item.Price
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>
                <a class="RemoveLink" data-id="@item.RecordId">حذف من العربه</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            الإجمالى
        </td>
        <td></td>
        <td></td>
        <td id="cart-total" class="text-right">
            @Model.CartTotal
        </td>
    </tr>
</table>


<p class="btn btn-danger pull-right" id="checkoutBtn">
    <a style="color:white;" asp-controller="Checkout" asp-action="AddressAndPayment">انهاء</a>
</p>

@section Scripts {
<script src="~/js/jquery-1.9.0.min.js" type="text/javascript"></script>
<script src="~/js//app/RemoveFromCart.js"></script>
}