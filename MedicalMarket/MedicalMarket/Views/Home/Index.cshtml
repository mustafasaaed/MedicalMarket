@model List<MedicalMarket.Models.App.Item>

@{
    ViewData["Title"] = "الرئيسية";
}

<div class="main">
    <div class="content">
        <div class="content_bottom">
            <div class="wrap">
                <div class="content-bottom-left">
                    <div class="categories">
                        @await Component.InvokeAsync("AllCategories")
                    </div>
                </div>
                <div class="content-bottom-right">
                    <h3>Browse All Categories</h3>

                    @foreach (var item in Model)
                    {
                        <div class="section group">
                            <div class="grid_1_of_4 images_1_of_4">
                                <h4><a href="preview.html">@item.Name</a></h4>
                                <a href="preview.html"><img src="images/product-img1.jpg" alt="" /></a>
                                <div class="price-details">
                                    <div class="price-number">
                                        <p><span class="rupees">$ @item.Price</span></p>
                                    </div>
                                    <div class="add-cart">
                                        <h4><a href="preview.html">More Info</a></h4>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>